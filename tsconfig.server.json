{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@assets/*": [
                "./attached_assets/*"
            ]
        },
        "strict": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true
    },
    "include": [
        "server",
        "shared"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/archived"
    ]
}